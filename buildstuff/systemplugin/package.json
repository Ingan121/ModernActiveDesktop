{
  "name": "madsysplug",
  "version": "3.3.1",
  "description": "ModernActiveDesktop System Plugin",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64"
  },
  "homepage": "https://madesktop.ingan121.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ingan121/ModernActiveDesktop.git",
    "directory": "buildstuff/systemplugin"
  },
  "keywords": [
    "Electron",
    "Wallpaper Engine",
    "ModernActiveDesktop"
  ],
  "author": "Ingan121",
  "license": "MIT",
  "devDependencies": {
    "electron": "^32.0.1",
    "electron-builder": "^24.9.1",
    "webpack": ">=5.76.0",
    "webpack-cli": ">=4.6.0"
  },
  "dependencies": {
    "minimist": "^1.2.8"
  },
  "build": {
    "productName": "ModernActiveDesktop System Plugin",
    "copyright": "Copyright Â© 2024 Ingan121, Licensed under the MIT license",
    "executableName": "MADSysPlug",
    "appId": "com.ingan121.madesktop.sysplug",
    "artifactName": "systemplugin.zip",
    "asar": true,
    "files": [
      {
        "from": "src",
        "to": ".",
        "filter": [
          "**/*"
        ]
      },
      {
        "filter": "package.json"
      }
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "extraResources": "*.exe",
    "afterAllArtifactBuild": "./postbuild.js",
    "win": {
      "target": [
        "zip"
      ],
      "icon": "src/icon.ico"
    },
    "directories": {
      "output": "./dist",
      "app": "."
    }
  }
}
